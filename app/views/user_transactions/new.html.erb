<% new_transaction_nav_options %>
<% if Group.where(user_id: @user.id).empty? %>
  <div class="page-container d-flex flex-column vh-100">
    <div class="d-flex flex-column align-items-center justify-around h-100">
      <h1 class="fc-3 text-center">
        SmartTrackApp
      </h1>
    </div>
  </div>
<% else %>
  <div class="add-transaction-container d-flex flex-column pt-100p">
    <div class="d-flex flex-column">
      <%= form_with url: user_transactions_path, scope: UserTransaction, remote: true, id: 'add-transaction', class: 'd-flex flex-column background-color-1' do |f| %>
          <%= render partial: 'errors/form_errors', locals: { model: UserTransaction} %>
          <%= f.hidden_field :author_id, value: @user.id %>
          <div class="field input-border">
            <div class="select-label">
              <%= f.label 'Choose a group: ', class: 'fc-5'%><br />
            </div>
            <%= f.collection_select :group_id, group_list[:groups], :id, :name, selected: group_list[:selected], class: 'default-input w-100 fc-5' %>
          </div>
          <div class="field input-border">
            <%= f.text_field :name, placeholder: 'Transaction info', autofocus: true, class: 'default-input w-100', value: '' %>
          </div>
          <div class="field">
            <%= f.number_field :amount, placeholder: 'Transaction value', autofocus: true, class: 'default-input w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>