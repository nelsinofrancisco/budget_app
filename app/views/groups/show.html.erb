<% show_group_nav_options %>

<div class="user-transaction-container d-flex flex-column">
  <% if @user_transactions.empty? %>
    <p>
      You have not added any transaction for this group yet! Try adding one below.
    </p>
  <% else %>
    <% @user_transactions.each do |transaction| %>
      <%= render partial:'user_transactions/transaction_card', locals: { transaction: transaction } %>
    <% end %>
  <% end %>
  <div class="p-1 btn-color-3 mt-50p w-100">
    <%= button_to new_user_transaction_path, params: { group_id: @group.id }, method: :get, class: "default-btn-1 fc-2 w-100", id: 'nav-menu' do %>
      Add Transaction
    <% end %>
  </div>
</div>